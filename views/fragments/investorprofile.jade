        form#bandInfo.well
            label(for="bandName") Company Name
            input#bandName.k-textbox(type="text",name="bandName",placeholder="Company Name", required="", validationMessage="please enter a band name")
            label(for="phone") Phone #
            input#phone.k-textbox(type="text",name="phone",placeholder="Phone")
            p
                label What Best Describes You?
                    input#upTo40K(type="radio",name="investorClass",value='upTo40K')
