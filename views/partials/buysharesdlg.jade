.modal-header
    button.close(type="button",data-dismiss="modal",aria-hidden="true",ng-click="close()") x
    h3#buySharesModalLabel Buy Shares!
.modal-body
    .row-fluid
        .span6
            pre#offerInfo
                | Name : &nbsp;
                span(style="font-weight: bold;",data-bind="text: name") {{offer.name}}
                br
                | Raise Amount : &nbsp;
                span(style="font-weight: bold;",data-bind="text: amtToRaise") {{offer.amtToRaise}}
                br
                | % Offered : &nbsp;
                span(style="font-weight: bold;",data-bind="text: pctOfferingToSell") {{offer.pctOfferingToSell}}
                br
                | # Shares : &nbsp;
                span(style="font-weight: bold;",data-bind="text: numShares") {{offer.numShares}}
                br
                | Shares Avail : &nbsp;
                span(style="font-weight: bold;",data-bind="text: sharesAvailable") {{offer.sharesAvailable}}
                br
                | Share Price (USD) : &nbsp;
                span(style="font-weight: bold;",data-bind="text: sharePrice") {{offer.sharePrice}}
                br
                | Share Buys You (%) : &nbsp;
                span(style="font-weight: bold;",data-bind="text: shareBuysYou") {{offer.shareBuysYou}}

        .span6
            img.pull-right(src="/images/stock_market-icon.gif",width=64,height=64)
            form#buySharesForm
                fieldset
                label # Shares To Buy
                input#sharesPurchased(ng-model="sharesPurchased",type="number",name="sharesPurchased")

.modal-footer
    button.btn(data-dismiss="modal",aria-hidden="true",ng-click="close()") Close
    button#buySharesBtn.btn.btn-primary(ng-click="close(sharesPurchased)") Buy Shares!