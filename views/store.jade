extends layout
block content
    style
        body {
                padding-top: 60px;
                padding-bottom: 40px;
              }
    include common/topbar
    .container
        .hero-unit
            h2 SoundScry Store
            .row
                .span2 &nbsp;
                .span10
                    .thumbnail
                        img(src="http://placehold.it/700x200")
                .span2 &nbsp;
        hr
        h3 New Releases
        .k-content.row
            .k-pager-wrap#pager
            select#genre
                option Hip Hop
                option Rock
                option Country
                option Classical
                option R&B
                option Electronic
            #listView


    script#template(type="text/x-kendo-tmpl")
        .product(data-content="${artistName} <br> <b>Bio: </b>${bio} ${albums.price} ${albums.genre} <br> <button> Add To Cart </button> ",data-trigger="hover")
            img(src="util/rndsmlcvr/${Math.random()}")
            .h3 ${albums.name}
            p ${artistName} $${albums.price} ${albums.genre}


    script
        $('#genre').kendoDropDownList();
        $(document).ready(function(){
            var dataSource = new kendo.data.DataSource({
                transport: {
                    read: {
                        url: "/api/songs",
                        dataType:"json"
                    }
                }
            });
            $('#pager').kendoPager({
                dataSource: dataSource
            });
            $('#listView').kendoListView({
                dataSource: dataSource,
                template: kendo.template($('#template').html()),
                dataBound:function(e){
                    $(".product").popover();

                }

            });
        });


    style(scoped="")
        #listView {
            min-height: 610px;
        }

        .product {
        float: left;
        position: relative;
            width: 110px;
            height: 160px;
            margin: 10px;
            padding: 7px 7px 0 7px;
            -moz-box-shadow: 0 1px 2px 0 rgba(0,0,0,0.2);
            -webkit-box-shadow: 0 1px 2px 0 rgba(0,0,0,0.2);
            box-shadow: 0 1px 2px 0 rgba(0,0,0,0.2);
        background-color: rgba(255,255,255,0.8)
        }

        .product img {
        width: 110px;
            height: 110px;
        }

        .product h3 {
            margin: 0;
            padding: 0;
            line-height: 1.1em;
        font-size: .9em;
        font-weight: normal;
            text-transform: uppercase;
        color: #777;
        }

        .product p {
            visibility: hidden;
        }

        .product:hover p {
            visibility: visible;
        position: absolute;
        width: 100px;
        height: 78px;
        top: 77px;
            margin: 0;
        padding: 3px 5px;
        line-height: 34px;
        vertical-align: top;
        text-align: center;
        color: #fff;
        background-color: rgba(0,0,0,0.65);
        transition: background .2s linear, color .2s linear;
        -moz-transition: background .2s linear, color .2s linear;
        -webkit-transition: background .2s linear, color .2s linear;
        -o-transition: background .2s linear, color .2s linear;
        }

        .k-listview:after, .product dl:after {
            content: ".";
            display: block;
            height: 0;
            clear: both;
            visibility: hidden;
        }

        .k-listview {
            border: 0;
            padding: 0 0 20px 0;
            min-width: 0;
        }




