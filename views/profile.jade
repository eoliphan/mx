                    data:[50.27,112.65,245.50,302.97,600.12, 1027.25, 2047.45]
                }
            ],
            seriesDefaults: {type: "line"}
        });
    script
        $("#investchart").kendoChart({
            height: 200,
            title: {
                text: "Investment Breakdown"
            },
            dataSource: {
                data: [
                    {category: "Moop", value: 5000},
                    {category: "Faith+1", value: 3000}
                ]
            },
            series: [{
                type: "donut",
